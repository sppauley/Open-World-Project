[
    {
        "name": "Empower Staff",
        "trigger": "enemy_turn_change",
        "level_nid": "43",
        "condition": "game.turncount % 2 == 1 and game.check_alive('MorrisseyBoss')",
        "commands": [],
        "only_once": false,
        "priority": 20,
        "_source": [
            "center_cursor;MorrisseyBoss",
            "",
            "# gets a list of units that can be empowered",
            "level_var;NonEmpoweredUnits;[unit.nid for unit in game.get_enemy_units() if 'Empowered' not in [skill.nid for skill in unit.skills] and unit.nid != 'MorrisseyBoss']",
            "",
            "# selects the unit to be empowered",
            "level_var;EmpowerUnit;game.get_random_choice(game.level_vars['NonEmpoweredUnits'])",
            "",
            "give_skill;{eval:game.level_vars['EmpowerUnit']};Empowered",
            "add_tag;{eval:game.level_vars['EmpowerUnit']};Boss"
        ]
    }
]